<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Sign up</h1>
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <%= f.submit 'Sign up', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
