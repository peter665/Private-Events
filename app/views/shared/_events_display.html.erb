<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ol class="events">
      <h3 class="text-center">Upcoming Events</h3>
      <hr />
      <% @events.upcoming.each do |event| %>
        <li class="well">
          <%= event.description %>
          <%= link_to 'See more', event_path(event), class: 'pull-right' %>
        </li>
      <% end %>
    </ol>
    <ol class="events">
      <h3 class="text-center">Past Events</h3>
      <hr />
      <% @events.previous.each do |event| %>
        <li class="well">
          <%= event.description %>
          <%= link_to 'See more', event_path(event), class: 'pull-right' %>
        </li>
      <% end %>
    </ol>
  </div>
</div>
