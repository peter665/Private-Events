<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Create an Event</h1>
      <%= form_for @event do |f| %>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <%= f.submit 'Submit', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
